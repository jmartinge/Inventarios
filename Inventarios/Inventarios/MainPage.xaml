<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventarios.MainPage"
             Visual="Material">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250">

        <Image Source="lico"/>
        <Label Text="Sistema de Inventarios" HorizontalOptions="Center" TextColor="#800080" FontFamily="Arial" FontAttributes="Bold" FontSize="18" Margin="0,50,0,0"/>
        <Label Text="Ingrese sus credenciales" HorizontalOptions="Center" TextColor="#274876" FontFamily="Arial" FontAttributes="Bold" FontSize="12" Margin="0,10"/>
        <Entry x:Name="ID_USUARIO" Placeholder="Usuario" FontSize="12" HorizontalTextAlignment="Center"/>
        <Entry x:Name="PASSWORD" Placeholder="Contraseña" FontSize="12" IsPassword="True" HorizontalTextAlignment="Center"/>
        <Button Text="Entrar" Clicked="Button_Clicked" FontFamily="Arial" FontAttributes="Bold" FontSize="18" BackgroundColor="#800080" Margin="0,10,0,0"/>

    </StackLayout>

</ContentPage>
